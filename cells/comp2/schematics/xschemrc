# Set XSCHEM_SHAREDIR explicitly
set env(XSCHEM_SHAREDIR) /usr/local/share/xschem
set XSCHEM_SHAREDIR $env(XSCHEM_SHAREDIR)

# Setup PDK environment variables
if {![info exists env(PDK_ROOT)]} {
    set env(PDK_ROOT) "/home/astha/pdk"
}
set env(PDK) "gf180mcuD"

# Set the library path explicitly
set XSCHEM_LIBRARY_PATH [join [list \
    . \
    ${XSCHEM_SHAREDIR}/xschem_library \
    ${XSCHEM_SHAREDIR}/xschem_library/devices \
    $env(PDK_ROOT)/$env(PDK)/libs.tech/xschem \
] ":"]

set env(XSCHEM_LIBRARY_PATH) $XSCHEM_LIBRARY_PATH

puts "DEBUG: XSCHEM_LIBRARY_PATH is $XSCHEM_LIBRARY_PATH"
